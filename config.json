{
  "sensors": {
    "temperature": {
      "enabled": true,
      "update_interval": 2,
      "initial_value": 20.0,
      "min_value": 15.0,
      "max_value": 25.0,
      "variation_range": 2.0
    },
    "light": {
      "enabled": true,
      "update_interval": 1.5,
      "initial_value": 50.0,
      "min_value": 0.0,
      "max_value": 100.0,
      "variation_range": 10.0
    },
    "motion": {
      "enabled": true,
      "update_interval": 3.0,
      "motion_probability": 0.3
    }
  },
  "actuators": {
    "light": {
      "enabled": true,
      "initial_state": false
    },
    "heater": {
      "enabled": true,
      "initial_state": false,
      "target_temperature": 20.0
    },
    "alarm": {
      "enabled": true,
      "initial_state": false
    }
  },
  "rules": {
    "temperature_threshold_low": 18.0,
    "temperature_threshold_high": 22.0,
    "light_threshold_low": 30.0,
    "motion_detection_enabled": true,
    "home_occupied": true
  },
  "logging": {
    "log_file": "logs/smart_home.log",
    "log_level": "INFO"
  },
  "flask": {
    "host": "127.0.0.1",
    "port": 5000,
    "debug": false
  }
}


